<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= t("History") %></h2>
<!--/descriptions-->

<!--subnav-->
<% if logged_in? && !current_user.readings.empty? %>
<ul class="navigation actions" role="navigation">
  <li>
    <%= span_if_current t("Full History"), user_readings_path(@user), params[:show].blank? %>
  </li>
  <li>
    <%= span_if_current t("Marked for Later"), user_readings_path(@user, show: "to-read"), params[:show] == "to-read" %>
  </li>
  <li>
    <%= link_to t("Clear Entire History"), confirm_clear_user_readings_path(current_user) %>
  </li>
</ul>
<% end %>
<!--/subnav-->

<!--main content-->
<h3 class="landmark heading"><%= t("List of History Items") %></h3>
<% if logged_in? && @readings.present? %>
  <ol class="reading work index group">
    <% @readings.each do |reading| %>
      <%= render "reading_blurb", work: reading.work, reading: reading %>
    <% end %>
  </ol>
<% end %>
<!--/content-->

<!--subnav-->
<%= will_paginate @readings %>
<!--/subnav-->
